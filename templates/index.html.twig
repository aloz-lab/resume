{% extends 'base.html.twig' %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img class="img-fluid img-profile rounded-circle mx-auto mb-5" src="/assets/pictures/Anne_Lozier_carre.jpg" alt="photo" />
            <!-- Masthead Heading-->
            <h1 class="masthead-heading text-uppercase mb-0">Anne Lozier</h1>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fab fa-gg-circle"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Masthead Subheading-->
            <p class="masthead-subheading font-weight-light mb-0">Développeuse web Fullstack - PHP / Symfony</p>
        </div>
    </header>

    <!-- About Section-->
    <section class="page-section bg-secondary text-dark mb-0" id="about">
        <div class="container">
            <!-- About Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-dark">About</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fab fa-gg-circle"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- About Section Content-->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <p class="lead mb-4">Après avoir travaillé de nombreuses années dans le domaine de la documentation et de la veille scientifiques, j'ai entamé une reconversion professionnelle en développement web.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 ml-auto">
                    <h4>Formation</h4>
                    <p class="lead">Wild Code School - 2020 : Développeur web et web mobile - spécialité PHP / Symfony</p>
                    <a href="https://www.wildcodeschool.com/fr-FR/formations/developpeur-web" target="_blank">Détails</a>
                </div>
                <div class="col-lg-4 mr-auto">
                    <h4>Compétences</h4>
                    <p class="lead">Langages de programmation et outils</p>
                     <i class="fab fa-php fa-2x mx-2"></i>
                     <i class="fab fa-symfony fa-2x mx-2"></i>
                     <i class="fab fa-html5 fa-2x mx-2"></i>
                     <i class="fab fa-css3-alt fa-2x mx-2"></i>
                     <i class="fab fa-bootstrap fa-2x mx-2"></i>
                     <i class="fab fa-git fa-2x mx-2"></i>
                     <i class="fab fa-github fa-2x mx-2"></i>
                    <p class="lead mt-3">Workflow</p>
                    <p><i class="fas fa-check mr-2"></i>Responsive, mobile-first</p>
                    <p><i class="fas fa-check mr-2"></i>Développement Agile - Scrum</p>
                </div>
            </div>
            <!-- About Section Button-->
            <div class="text-center mt-4">
                <a class="btn btn-xl btn-outline-dark" href="">
                    <i class="fas fa-download mr-2"></i>
                    Free Download!
                </a>
            </div>
        </div>
    </section>

    <!-- Project Section-->
    <section class="page-section bg-primary text-white mb-0" id="projets">
        <div class="container">
            <!-- Project Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-white">Projets</h2>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fab fa-gg-circle"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Project Section Content-->
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <img src="" class="card-img-top" alt="">
                        <div class="card-body text-center">
                            <h6 class="text-uppercase text-dark m-0">Adresse</h6>
                            <hr class="my-4" />
                            <div class="text-black-50">17 rue Xaintrailles, 75013 Paris</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Interests Section-->
    <section class="page-section bg-secondary text-primary mb-0" id="interets">
        <div class="container">
            <!-- Interests Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-primary">Intérêts</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fab fa-gg-circle"></i><i class="fas fa-circle"></i><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Interests Section Content-->
            <div class="row">
                <div class="col-lg-4 text-center mx-auto mt-4">
                    <p class="lead"><i class="fas fa-camera fa-lg mr-2"></i>Photographie</p>
                    <p class="lead"><i class="fas fa-running fa-lg mr-2"></i>Trail - Running</p>
                    <p class="lead"><i class="far fa-shuttlecock fa-lg mr-2"></i>Badminton</p>
                    <p class="lead"><i class="fas fa-hiking fa-lg mr-2"></i>Randonnée - Trekking</p>
                    <p class="lead"><i class="fas fa-hands-helping fa-lg mr-2"></i>Bénévolat</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section-->
    <section class="page-section bg-light text-primary" id="contact">
        <div class="container">
            <!-- Contact Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-primary mb-0">Contact</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fab fa-gg-circle"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-map-marked-alt text-primary mb-3"></i>
                            <h6 class="text-uppercase m-0">Adresse</h6>
                            <hr class="my-4" />
                            <div class="text-black-50">17 rue Xaintrailles, 75013 Paris</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-envelope text-primary mb-3"></i>
                            <h6 class="text-uppercase m-0">Email</h6>
                            <hr class="my-4" />
                            <div class="text-black-50"><a href="#!">alozier@orange.fr</a></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-mobile-alt text-primary mb-3"></i>
                            <h6 class="text-uppercase m-0">Téléphone</h6>
                            <hr class="my-4" />
                            <div class="text-black-50">06 66 46 56 85</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="social d-flex justify-content-center mt-4">
                <a class="mx-2 mt-3" href="https://www.linkedin.com/in/anne-lozier/" target="_blank"><i class="fab fa-2x fa-linkedin"></i></a>
                <a class="mx-2 mt-3" href="https://github.com/aloz-lab" target="_blank"><i class="fab fa-2x fa-github"></i></a>
            </div>
        </div>
    </section>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
    <div class="scroll-to-top d-lg-none position-fixed">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
    </div>
{% endblock %}